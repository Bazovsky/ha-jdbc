	<cluster balancer="simple" default-sync="passive" meta-data-cache="none" transaction-mode="parallel">
		<xa-datasource id="datasource1">
			<name>datasource1</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</xa-datasource>
		<xa-datasource id="datasource2" weight="2">
			<name>datasource2</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</xa-datasource>
	</cluster>
</ha-jdbc>