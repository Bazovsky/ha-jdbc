<?xml version="1.0"?>
<!DOCTYPE binding SYSTEM "binding.dtd">
<binding direction="input">
	<mapping name="ha-jdbc" class="net.sf.hajdbc.DatabaseClusterFactory$Configuration">
		<structure name="distributable" field="decoratorDescriptor" type="net.sf.hajdbc.distributable.DistributableDatabaseClusterDescriptor" usage="optional">
			<value name="protocol" field="protocol" style="attribute" usage="required"></value>
		</structure>
		<collection field="descriptorList" type="java.util.LinkedList"></collection>
	</mapping>
	<mapping name="cluster" class="net.sf.hajdbc.local.LocalDatabaseClusterDescriptor" value-style="attribute">
		<value name="name" field="name"></value>
		<value name="validate-sql" field="validateSQL" usage="optional" default="SELECT 1"></value>
		<value name="create-foreign-key-sql" field="createForeignKeySQL" usage="optional" default="ALTER TABLE {1} ADD CONSTRAINT {0} FOREIGN KEY ({2}) REFERENCES {3} ({4})"></value>
		<value name="drop-foreign-key-sql" field="dropForeignKeySQL" usage="optional" default="ALTER TABLE {1} DROP CONSTRAINT {0}"></value>
		<value name="create-index-sql" field="createIndexSQL" usage="optional" default="CREATE INDEX {0} ON {1} ({2})"></value>
		<value name="drop-index-sql" field="dropIndexSQL" usage="optional" default="DROP INDEX {0}"></value>
		<collection add-method="addDatabase"></collection>
	</mapping>
	<mapping name="database" class="net.sf.hajdbc.DriverDatabase">
		<value name="url" field="url" usage="required" style="attribute"></value>
		<value name="driver" field="driver" usage="required" style="attribute"></value>
		<value name="user" field="user" usage="optional" style="element"></value>
		<value name="password" field="password" usage="optional" style="element"></value>
	</mapping>
	<mapping name="datasource" class="net.sf.hajdbc.DataSourceDatabase">
		<value name="name" field="name" usage="required" style="attribute"></value>
		<value name="user" field="user" usage="optional" style="element"></value>
		<value name="password" field="password" usage="optional" style="element"></value>
	</mapping>
	<mapping name="pool-datasource" class="net.sf.hajdbc.pool.ConnectionPoolDataSourceDatabase">
		<value name="name" field="name" usage="required" style="attribute"></value>
		<value name="user" field="user" usage="optional" style="element"></value>
		<value name="password" field="password" usage="optional" style="element"></value>
	</mapping>
	<mapping name="xa-datasource" class="net.sf.hajdbc.pool.xa.XADataSourceDatabase">
		<value name="name" field="name" usage="required" style="attribute"></value>
		<value name="user" field="user" usage="optional" style="element"></value>
		<value name="password" field="password" usage="optional" style="element"></value>
	</mapping>
</binding>
