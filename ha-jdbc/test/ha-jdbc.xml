<ha-jdbc>
	<sync id="full" class="net.sf.hajdbc.sync.FullSynchronizationStrategy"/>
	<sync id="diff" class="net.sf.hajdbc.sync.DifferentialSynchronizationStrategy"/>
	<cluster id="database-cluster" balancer="simple" default-sync="full">
		<database id="database1" weight="2">
			<driver>net.sf.hajdbc.sql.MockDriver</driver>
			<url>jdbc:mock:database1</url>
		</database>
		<database id="database2" weight="1">
			<driver>net.sf.hajdbc.sql.MockDriver</driver>
			<url>jdbc:mock:database2</url>
		</database>
	</cluster>
	<cluster id="datasource-cluster" balancer="simple" default-sync="full">
		<datasource id="datasource1" weight="1">
			<name>datasource1</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</datasource>
		<datasource id="datasource2" weight="2">
			<name>datasource2</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</datasource>
	</cluster>
	<cluster id="pool-datasource-cluster" balancer="simple" default-sync="full">
		<pool-datasource id="datasource1" weight="1">
			<name>pool-datasource1</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</pool-datasource>
		<pool-datasource id="datasource2" weight="2">
			<name>pool-datasource2</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</pool-datasource>
	</cluster>
	<cluster id="xa-datasource-cluster" balancer="simple" default-sync="full">
		<xa-datasource id="datasource1" weight="1">
			<name>xa-datasource1</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</xa-datasource>
		<xa-datasource id="datasource2" weight="2">
			<name>xa-datasource2</name>
			<property name="java.naming.factory.initial">net.sf.hajdbc.sql.MockInitialContextFactory</property>
		</xa-datasource>
	</cluster>
</ha-jdbc>